{
  "compilerOptions": {
    "types": ["vite/client"],
    "jsx": "react",
    "target": "es6",
    "module": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}